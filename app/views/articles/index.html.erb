<h1 align='center'>List of all articles</h1>

<% @articles.each do |a| %>

  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="article-title">
          <td><%= link_to a.title, article_path(a) %></td>
        </div>
        <div class="article-body">
          <%= truncate(a.description, length: 100) %>
          <!-- truncate limits the length of description and goes ... once hitting 100 chars -->
        </div>
        <div class='article-actions'>
          <%= link_to "Edit this article", edit_article_path(a), class: "btn btn-xs btn-primary" %>
          <%= link_to "Delete this article", article_path(a), method: :delete,
                                              data: {confirm: "Are you sure you want to delete this article?"},
                                              class: "btn btn-xs btn-danger" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
